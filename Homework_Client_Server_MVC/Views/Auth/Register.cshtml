@{
    ViewBag.Title = "Register";
}
@model Homework_Client_Server_MVC.Models.UserModel

<h2>Register</h2>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}
<form method="post" asp-controller="Auth" asp-action="Register">
    <div class="form-group">
        <label class="mt-2" for="username">Username</label>
        <input type="text" id="username" name="username" class="form-control" required />
    </div>
    <div class="form-group">
        <label class="mt-2">Password</label>
        <input type="password" id="password" name="password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Register</button>
</form>
<p class="mt-2">
    Already have an account? <a asp-controller="Auth" asp-action="Login">Login here</a>.
</p>